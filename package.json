<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, maximum-scale=1.0, user-scalable=no" />
  <meta name="theme-color" content="#E10600" />
  <meta name="color-scheme" content="light dark" />

  <title>SCORE Store | Tienda Oficial</title>
  <meta name="description" content="Tienda oficial de merch SCORE. Fabricado en Tijuana por ÚNICO UNIFORMES. Ediciones limitadas." />
  
  <link rel="canonical" href="https://scorestore.netlify.app/" />
  <link rel="manifest" href="/site.webmanifest" />
  <link rel="icon" href="/assets/icons-score.svg" type="image/svg+xml" />
  <link rel="apple-touch-icon" href="/assets/logo-score.png" />

  <script src="https://js.stripe.com/v3/"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Teko:wght@500;600;700&family=Inter:wght@400;600;800;900&display=swap" rel="stylesheet" />

  <style>
    :root {
      --fontTitle: "Teko", sans-serif;
      --fontBody: "Inter", sans-serif;
      --red: #E10600;
      --sand: #f0f0f0;
      --green: #00C853;
      /* Overlay Café Tierra para el Hero */
      --cafeOverlay: linear-gradient(180deg, rgba(62, 39, 35, 0.95) 0%, rgba(45, 26, 16, 0.8) 100%);
      --shadow: 0 10px 40px rgba(0,0,0,0.18);
      --ease: cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
    body {
      margin: 0; font-family: var(--fontBody); background: var(--sand); color: #111;
      overflow-x: hidden; padding-bottom: 120px;
    }

    /* --- ANIMACIÓN POLVO (Optimizado Móvil) --- */
    .dust-container {
      position: fixed; inset: 0; pointer-events: none; z-index: -1; overflow: hidden;
    }
    .dust {
      position: absolute; width: 200%; height: 200%; top: -50%; left: -50%;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.08'/%3E%3C/svg%3E");
      animation: grain 8s steps(10) infinite;
      opacity: 0.6; mix-blend-mode: multiply;
    }
    @keyframes grain { 0%, 100% { transform:translate(0,0) } 10% { transform:translate(-5%,-10%) } 20% { transform:translate(-15%,5%) } 30% { transform:translate(7%,-25%) } 40% { transform:translate(-5%,25%) } 50% { transform:translate(-15%,10%) } 60% { transform:translate(15%,0%) } 70% { transform:translate(0%,15%) } 80% { transform:translate(3%,35%) } 90% { transform:translate(-10%,10%) } }

    /* Topbar */
    .topbar {
      position: fixed; top: 0; inset-inline: 0; height: 70px; z-index: 90;
      background: rgba(255,255,255,0.96); border-bottom: 3px solid var(--red);
      backdrop-filter: blur(12px); display: flex; align-items: center; justify-content: space-between;
      padding: 0 max(20px, 4vw);
    }
    .brand img { height: 48px; width: auto; }
    
    .cartBtn {
      background: #000; color: #fff; border: none; height: 44px; padding: 0 20px;
      font-family: var(--fontTitle); font-size: 24px; font-weight: 700;
      display: flex; align-items: center; gap: 8px; clip-path: polygon(10% 0, 100% 0, 100% 100%, 0% 100%);
      cursor: pointer;
    }
    .cartCount { background: var(--red); font-size: 12px; padding: 2px 6px; border-radius: 4px; font-family: var(--fontBody); }

    /* HERO */
    .hero {
      position: relative; margin: 90px auto 40px; width: min(1200px, 94vw);
      min-height: 520px; border-radius: 20px; overflow: hidden;
      display: flex; align-items: center; box-shadow: var(--shadow);
    }
    .heroBg {
      position: absolute; inset: 0; background: url('/assets/hero.png') center/cover;
    }
    .heroOverlay {
      position: absolute; inset: 0; background: var(--cafeOverlay); mix-blend-mode: multiply; opacity: 0.9;
    }
    .heroContent { position: relative; z-index: 2; padding: 40px; max-width: 700px; color: #fff; }
    .hero h1 {
      font-family: var(--fontTitle); font-size: clamp(52px, 12vw, 96px); line-height: 0.85;
      margin: 10px 0; text-transform: uppercase;
    }
    .tagline {
      background: var(--red); color: #fff; padding: 4px 12px; font-weight: 800;
      transform: skew(-10deg); display: inline-block;
    }

    /* BOTONES */
    .btn {
      border: none; background: #fff; color: #000; padding: 16px 32px;
      font-weight: 900; text-transform: uppercase; border-radius: 12px;
      cursor: pointer; display: inline-flex; align-items: center; gap: 8px;
      transition: transform 0.2s var(--ease); font-size: 14px; letter-spacing: 0.5px;
    }
    .btn:active { transform: scale(0.96); }
    .btn.primary { background: #111; color: #fff; }

    /* GRID EDICIONES */
    .secTitle { width: min(1200px, 94vw); margin: 0 auto 20px; font-family: var(--fontTitle); font-size: 42px; display:flex; justify-content:space-between; align-items:baseline;}
    
    .grid {
      display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px; width: min(1200px, 94vw); margin: 0 auto 60px;
    }
    .card {
      position: relative; height: 340px; border-radius: 18px; overflow: hidden;
      background: #0b0f14; cursor: pointer; transition: transform 0.3s var(--ease);
      border: 1px solid rgba(255,255,255,0.1);
    }
    .card:hover { transform: translateY(-5px); }
    
    .cardBg {
      position: absolute; inset: 0; opacity: 0.5;
      background: url('/assets/baja1000-texture.png') center/cover;
      transition: opacity 0.3s;
    }
    .card:hover .cardBg { opacity: 0.8; }

    .cardContent {
      position: absolute; inset: 0; padding: 20px;
      display: flex; flex-direction: column; align-items: center; justify-content: center;
    }
    .cardLogo { width: 85%; height: auto; object-fit: contain; margin-bottom: 25px; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.6)); }
    .status {
      position: absolute; top: 15px; left: 15px; background: var(--green); color: #000;
      font-weight: 900; font-size: 10px; padding: 4px 8px; border-radius: 4px; letter-spacing: 1px;
    }
    .viewBtn {
      background: #fff; color: #000; border: none; padding: 12px 24px;
      font-weight: 900; text-transform: uppercase; clip-path: polygon(10% 0, 100% 0, 100% 100%, 0% 100%);
      font-size: 12px; letter-spacing: 1px;
    }

    /* PARTNERS */
    .partners {
      width: min(1200px, 94vw); margin: 0 auto 60px; text-align: center;
      padding: 30px; background: #fff; border-radius: 20px; border-bottom: 4px solid var(--red);
    }
    .pGrid { display: flex; justify-content: center; gap: 40px; flex-wrap: wrap; margin-top: 20px; align-items:center; }
    .pLogo { height: 35px; opacity: 0.6; filter: grayscale(1); transition: 0.3s; }
    .pLogo:hover { opacity: 1; filter: grayscale(0); }

    /* FOOTER */
    footer { background: #080b10; color: #fff; padding: 60px 0; margin-top: 60px; border-top: 4px solid var(--red); }
    .footWrap { width: min(1200px, 94vw); margin: 0 auto; display: grid; grid-template-columns: 1fr 1fr; gap: 40px; }
    @media(max-width:768px){ .footWrap { grid-template-columns: 1fr; } }
    
    details {
      background: rgba(255,255,255,0.05); margin-bottom: 10px; border-radius: 12px;
    }
    summary {
      padding: 16px; font-weight: 700; cursor: pointer; list-style: none;
      display: flex; justify-content: space-between; align-items: center; color: #fff;
    }
    summary svg { width: 22px; height: 22px; stroke: var(--green); stroke-width: 2.5; }
    .legalContent { padding: 0 16px 16px; color: #bbb; font-size: 14px; line-height: 1.6; }

    /* DRAWER & MODALS */
    .drawer {
      position: fixed; top: 0; right: 0; width: min(450px, 100vw); height: 100%;
      background: #fff; z-index: 200; transform: translateX(105%); transition: 0.3s var(--ease);
      display: flex; flex-direction: column; box-shadow: -10px 0 50px rgba(0,0,0,0.3);
    }
    .drawer.active { transform: translateX(0); }
    .overlay {
      position: fixed; inset: 0; background: rgba(0,0,0,0.7); z-index: 150;
      opacity: 0; pointer-events: none; transition: 0.3s;
    }
    .overlay.active { opacity: 1; pointer-events: auto; }
    
    .dHead { padding: 20px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center; }
    .dBody { flex: 1; overflow-y: auto; padding: 20px; }
    
    /* INPUTS MOBILE FIX */
    input, select {
      width: 100%; height: 50px; border: 1px solid #ddd; border-radius: 8px;
      padding: 0 15px; font-size: 16px !important; margin-bottom: 10px;
      background: #fff; appearance: none;
    }
    input:focus, select:focus { outline: 2px solid var(--red); border-color:transparent; }

    /* Paybar */
    .paybar {
      position: fixed; bottom: 20px; left: 50%; transform: translate(-50%, 120px);
      background: #111; color: #fff; padding: 15px 25px; border-radius: 50px;
      display: flex; gap: 20px; align-items: center; z-index: 100; transition: 0.3s var(--ease);
      box-shadow: 0 10px 30px rgba(0,0,0,0.3); width: min(90%, 400px); justify-content: space-between;
    }
    .paybar.visible { transform: translate(-50%, 0); }

    /* Modal Catálogo */
    .modal {
      position: fixed; inset: 40px; background: #fff; border-radius: 20px; z-index: 250;
      transform: scale(0.95); opacity: 0; pointer-events: none; transition: 0.2s;
      display: flex; flex-direction: column;
    }
    .modal.active { transform: scale(1); opacity: 1; pointer-events: auto; }
    @media(max-width:600px) { .modal { inset: 10px; } }
    
    .catGrid { display: grid; grid-template-columns: repeat(auto-fill, minmax(160px, 1fr)); gap: 15px; padding: 20px; overflow-y: auto; }
    .prodCard { border: 1px solid #eee; padding: 10px; border-radius: 14px; text-align: center; }
    .prodCard img { width: 100%; aspect-ratio: 1; object-fit: contain; margin-bottom: 10px; }

  </style>
</head>
<body>

  <div class="dust-container"><div class="dust"></div></div>
  <div class="overlay" id="overlay"></div>

  <header class="topbar">
    <a href="#" class="brand"><img src="/assets/logo-score.png" alt="SCORE"></a>
    <button class="cartBtn" onclick="openDrawer()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--green)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      <span id="cartCount" class="cartCount">0</span>
    </button>
  </header>

  <section class="hero">
    <div class="heroBg"></div>
    <div class="heroOverlay"></div>
    <div class="heroContent">
      <div class="tagline">OFFICIAL MERCH</div>
      <h1>SCORE INTERNATIONAL</h1>
      <p style="font-size: 18px; margin-bottom: 24px; opacity: 0.9;">Fabricado en Tijuana por ÚNICO UNIFORMES. Productos oficiales de edición limitada.</p>
      <button class="btn primary" onclick="document.querySelector('.grid').scrollIntoView({behavior:'smooth'})">
        Ver Colecciones
      </button>
    </div>
  </section>

  <div class="secTitle">
    <span>EDICIONES</span>
    <span style="font-size: 14px; color: #888; letter-spacing: 1px;">BAJA RACING</span>
  </div>

  <div class="grid">
    <div class="card" onclick="openCatalog('EDICION_2025', 'Baja 1000')">
      <div class="cardBg"></div>
      <div class="cardContent">
        <span class="status">ACTIVO</span>
        <img src="/assets/logo-baja1000.png" class="cardLogo" alt="Baja 1000">
        <button class="viewBtn">Ver Productos</button>
      </div>
    </div>
    <div class="card" onclick="openCatalog('BAJA_500', 'Baja 500')">
      <div class="cardBg"></div>
      <div class="cardContent">
        <span class="status">DISPONIBLE</span>
        <img src="/assets/logo-baja500.png" class="cardLogo" alt="Baja 500">
        <button class="viewBtn">Ver Productos</button>
      </div>
    </div>
    <div class="card" onclick="openCatalog('BAJA_400', 'Baja 400')">
      <div class="cardBg"></div>
      <div class="cardContent">
        <span class="status">DISPONIBLE</span>
        <img src="/assets/logo-baja400.png" class="cardLogo" alt="Baja 400">
        <button class="viewBtn">Ver Productos</button>
      </div>
    </div>
    <div class="card" onclick="openCatalog('SF_250', 'San Felipe 250')">
      <div class="cardBg"></div>
      <div class="cardContent">
        <span class="status">DISPONIBLE</span>
        <img src="/assets/logo-sf250.png" class="cardLogo" alt="San Felipe 250">
        <button class="viewBtn">Ver Productos</button>
      </div>
    </div>
  </div>

  <div class="partners">
    <h3 style="margin:0; font-family:var(--fontTitle); color:#888;">OFFICIAL PARTNERS</h3>
    <div class="pGrid">
      <img src="/assets/logo-ford.png" class="pLogo" alt="Ford" onerror="this.style.display='none'">
      <img src="/assets/logo-bfgodrich.png" class="pLogo" alt="BFGoodrich" onerror="this.style.display='none'">
      <img src="/assets/logo-monster.png" class="pLogo" alt="Monster" onerror="this.style.display='none'">
      <img src="/assets/logo-unico.png" class="pLogo" alt="Unico" onerror="this.style.display='none'">
      <img src="/assets/logo-rzr.png" class="pLogo" alt="RZR" onerror="this.style.display='none'">
    </div>
  </div>

  <footer>
    <div class="footWrap">
      <div>
        <h4 style="font-family:var(--fontTitle); font-size: 28px; margin: 0 0 10px;">ÚNICO UNIFORMES</h4>
        <p style="color:#888; font-size:13px;">Patrocinador Oficial. Tijuana B.C.<br>ventas.unicotextil@gmail.com</p>
      </div>
      <div>
        <details>
          <summary>Términos y Condiciones <svg viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></summary>
          <div class="legalContent">Productos sujetos a disponibilidad. Ediciones limitadas.</div>
        </details>
        <details>
          <summary>Envíos <svg viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></summary>
          <div class="legalContent">Envíos nacionales vía Envia.com. Locales en Tijuana $80.</div>
        </details>
        <details>
          <summary>Devoluciones <svg viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></summary>
          <div class="legalContent">Solo por defectos de fábrica (7 días).</div>
        </details>
      </div>
    </div>
  </footer>

  <aside class="drawer" id="drawer">
    <div class="dHead">
      <h3 style="margin:0; font-family:var(--fontTitle); font-size:24px;">TU EQUIPO</h3>
      <button onclick="closeAll()" style="background:none; border:none; font-size:24px;">×</button>
    </div>
    <div class="dBody" id="cartBody"></div>
    <div style="padding:20px; background:#f9f9f9;">
      <div style="display:flex; justify-content:space-between; font-weight:900; margin-bottom:10px;">
        <span>Total:</span> <span id="drawerTotal">$0 MXN</span>
      </div>
      <p style="font-size:12px; font-weight:700;">Método de Entrega:</p>
      <select id="shipMethod" onchange="updateCart()">
        <option value="">-- Selecciona --</option>
        <option value="pickup">Recoger en Fábrica (Tijuana) - Gratis</option>
        <option value="tj">Envío Local (Tijuana) - $80 MXN</option>
        <option value="mx">Envío Nacional (México) - Cotizar</option>
      </select>
      
      <div id="shipForm" style="display:none;">
        <input id="cp" type="tel" placeholder="Código Postal (5 dígitos)" maxlength="5">
        <input id="addr" placeholder="Dirección completa">
        <input id="name" placeholder="Nombre completo">
      </div>
      <div id="quoteResult" style="font-size:12px; font-weight:900; color:var(--green); margin-bottom:10px; display:none;"></div>

      <button id="payBtn" class="btn primary" style="width:100%; justify-content:center;" disabled onclick="checkout()">
        IR A PAGAR
      </button>
    </div>
  </aside>

  <div class="modal" id="modalCatalog">
    <div class="dHead">
      <h3 style="margin:0; font-family:var(--fontTitle); font-size:24px;" id="catTitle">CATÁLOGO</h3>
      <button onclick="closeAll()" style="background:none; border:none; font-size:24px;">×</button>
    </div>
    <div class="catGrid" id="catGrid"></div>
  </div>

  <div class="paybar" id="paybar">
    <div>
      <div style="font-size:10px; font-weight:800; opacity:0.7;">TOTAL</div>
      <div style="font-size:18px; font-weight:900;" id="barTotal">$0</div>
    </div>
    <button class="btn" style="padding:8px 16px; font-size:12px; height:36px;" onclick="openDrawer()">CARRITO</button>
  </div>

  <script>
    // --- CLAVE PÚBLICA (Frontend) ---
    const STRIPE_PK = "pk_live_51Se6fsGUCnsKfgrBdpVBcTbXG99reZVkx8cpzMlJxr0EtUfuJAq0Qe3igAiQYmKhMn0HewZI5SGRcnKqAdTigpqB00fVsfpMYh";
    
    // Fallback products (por si no carga JSON o para testing)
    const PRODUCTS = [
      { id:"chamarra-1000", name:"Chamarra Oficial Baja 1000", price:1490, img:"/assets/EDICION_2025/chamarra-baja1000.jpg", sizes:["S","M","L","XL"], section:"EDICION_2025" },
      { id:"camisa-pits", name:"Camisa Pits Baja 1000", price:899, img:"/assets/EDICION_2025/camisa-pits-baja1000.jpg", sizes:["S","M","L","XL"], section:"EDICION_2025" },
      { id:"tee-azul", name:"Tee Baja 1000 Azul", price:499, img:"/assets/EDICION_2025/camiseta-baja1000-azul.jpg", sizes:["S","M","L"], section:"EDICION_2025" },
      { id:"tee-500", name:"Tee Baja 500 Oficial", price:450, img:"/assets/EDICION_2025/camiseta-baja1000-negra.jpg", sizes:["M","L"], section:"BAJA_500" },
      { id:"tee-400", name:"Tee Baja 400 Oficial", price:450, img:"/assets/EDICION_2025/camiseta-baja1000-cafe.jpg", sizes:["M","L"], section:"BAJA_400" },
      { id:"hoodie-sf", name:"Hoodie San Felipe", price:799, img:"/assets/EDICION_2025/sudadera-world-desert-cafe.jpg", sizes:["S","M","L"], section:"SF_250" },
    ];

    let cart = JSON.parse(localStorage.getItem('cart') || '[]');
    let ship = { method: null, cost: 0 };
    const $ = id => document.getElementById(id);

    // --- Cargar Catálogo (Intenta JSON, usa fallback si falla) ---
    async function openCatalog(section, title) {
      $('catTitle').innerText = title.toUpperCase();
      let items = [];
      
      try {
        const res = await fetch('/data/catalog.json');
        if(res.ok) {
          const data = await res.json();
          items = data.products.filter(p => p.sectionId === section);
        }
      } catch(e) { console.log('Usando local'); }

      if(!items.length) items = PRODUCTS.filter(p => p.section === section);

      const grid = $('catGrid');
      
      if(!items.length) grid.innerHTML = "<p>Próximamente</p>";
      else grid.innerHTML = items.map(p => `
        <div class="prodCard">
          <img src="${p.img || p.image}" onerror="this.src='/assets/logo-score.png'">
          <div style="font-weight:700; font-size:14px; margin:5px 0;">${p.name}</div>
          <div style="color:var(--red); font-weight:900;">$${p.baseMXN || p.price}</div>
          <select id="size_${p.id}" style="margin:5px 0; height:36px; font-size:14px !important;">
            ${(p.sizes || ['Unitalla']).map(s=>`<option>${s}</option>`)}
          </select>
          <button class="btn primary" style="width:100%; justify-content:center; padding:8px;" 
            onclick="add('${p.id}','${p.name}',${p.baseMXN || p.price},'${p.img || p.image}')">AGREGAR</button>
        </div>
      `).join('');
      
      $('modalCatalog').classList.add('active');
      $('overlay').classList.add('active');
    }

    function add(id, name, price, img) {
      const size = $(`size_${id}`).value;
      const key = id + size;
      const exist = cart.find(i => i.key === key);
      if(exist) exist.qty++; else cart.push({ key, id, name, price, img, size, qty:1 });
      save();
      closeAll();
      openDrawer();
    }

    // --- Cotizar Envío Real (Llama a tu función backend) ---
    async function quoteShipping() {
      const cp = $('cp').value;
      if(cp.length !== 5) return;
      
      $('quoteResult').style.display = 'block';
      $('quoteResult').innerText = 'Cotizando envío...';
      
      try {
        const res = await fetch('/.netlify/functions/quote_shipping', {
          method: 'POST', headers: {'Content-Type':'application/json'},
          body: JSON.stringify({ 
            to: { postal_code: cp, state_code: "", city: "", address1: "" },
            items: cart 
          })
        });
        const data = await res.json();
        
        if(data.ok) {
          ship.cost = data.mxn;
          $('quoteResult').innerText = `Envío Cotizado: $${data.mxn} MXN (${data.carrier})`;
          updateCart(false); // Update without resetting logic
        } else {
          ship.cost = 250; // Fallback mínimo
          $('quoteResult').innerText = 'Tarifa estándar aplicada: $250 MXN';
          updateCart(false);
        }
      } catch(e) {
        console.error(e);
      }
    }

    function updateCart(resetShip = true) {
      const method = $('shipMethod').value;
      ship.method = method;
      
      if(resetShip) {
        if(method === 'tj') ship.cost = 80;
        else if(method === 'pickup') ship.cost = 0;
        else if(method === 'mx') {
             ship.cost = 0; // Se espera cotización
             if($('cp').value.length === 5) quoteShipping();
        }
      }

      $('shipForm').style.display = (method === 'mx') ? 'block' : 'none';
      
      const sub = cart.reduce((a,b) => a + (b.price*b.qty), 0);
      const total = sub + ship.cost;
      
      $('cartCount').innerText = cart.reduce((a,b)=>a+b.qty,0);
      $('drawerTotal').innerText = `$${total} MXN`;
      $('barTotal').innerText = `$${total}`;
      
      $('cartBody').innerHTML = cart.map((i,x) => `
        <div style="display:flex; gap:10px; margin-bottom:10px; background:#f4f4f4; padding:8px; border-radius:8px;">
          <img src="${i.img}" style="width:50px; height:50px; object-fit:cover;">
          <div style="flex:1;">
            <div style="font-weight:700; font-size:13px;">${i.name}</div>
            <div style="font-size:12px; color:#666;">${i.size}</div>
          </div>
          <div>
            <button onclick="cart.splice(${x},1);save()" style="color:red; border:none; font-size:20px;">×</button>
            <div style="font-weight:900; text-align:right;">x${i.qty}</div>
          </div>
        </div>
      `).join('') || '<div style="text-align:center; padding:20px; opacity:0.5;">Carrito Vacío</div>';

      const hasItems = cart.length > 0;
      $('paybar').classList.toggle('visible', hasItems);
      
      // Validación
      let valid = hasItems && method;
      if(method === 'mx') valid = valid && $('cp').value.length === 5 && $('addr').value.length > 5 && ship.cost > 0;
      $('payBtn').disabled = !valid;
    }

    // --- Checkout con tu función Backend ---
    async function checkout() {
      const btn = $('payBtn');
      btn.innerText = "PROCESANDO..."; btn.disabled = true;
      
      try {
        const stripe = Stripe(STRIPE_PK);
        const payload = {
          items: cart,
          shipping: {
            method: ship.method,
            cost: ship.cost,
            data: { cp: $('cp').value, address: $('addr').value, name: $('name').value }
          },
          // Envía datos extra que tus funciones esperan
          mode: ship.method, 
          to: { postal_code: $('cp').value }
        };

        const res = await fetch('/.netlify/functions/create_checkout', {
          method: 'POST', headers: {'Content-Type':'application/json'},
          body: JSON.stringify(payload)
        });
        
        const data = await res.json();
        if(data.url) window.location.href = data.url;
        else throw new Error("Error iniciando pago. Revisa conexión.");
        
      } catch(e) {
        alert("Error: " + e.message);
        btn.innerText = "IR A PAGAR"; btn.disabled = false;
      }
    }

    function save() { localStorage.setItem('cart', JSON.stringify(cart)); updateCart(); }
    function openDrawer() { $('drawer').classList.add('active'); $('overlay').classList.add('active'); updateCart(); }
    function closeAll() { $('drawer').classList.remove('active'); $('modalCatalog').classList.remove('active'); $('overlay').classList.remove('active'); }
    $('overlay').onclick = closeAll;
    
    $('cp').addEventListener('change', quoteShipping); // Auto cotizar al cambiar CP
    
    updateCart();
  </script>
</body>
</html>